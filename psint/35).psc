Algoritmo CalcularCocienteYResto
	
	Definir nA Como Entero;
	Definir nB Como Entero;

	
	nA=0;
	nB=0;
	
	Escribir "ingrese nro A";
	Leer nA;
	
	Escribir "ingrese nro B";
	Mientras nB=0 Hacer
		Leer nB;
		
	FinMientras
	
	Escribir "el cociente de ",nA,"/",nB," es: ",nA/nB;
	Escribir "el resto de ",nA,"/",nB," es: ",nA % nB;
	
	
	
	
	
FinAlgoritmo
